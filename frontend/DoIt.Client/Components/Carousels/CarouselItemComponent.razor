@if (_isActive)
{
    @ChildContent
}

@code {
    [CascadingParameter]
    public CarouselComponent Parent { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private bool _isActive => Parent.IsChildActive(this);

    protected override Task OnInitializedAsync()
    {
        Parent?.AddComponent(this);
        return base.OnInitializedAsync();
    }
}
